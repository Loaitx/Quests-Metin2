quest skill_reset2 begin
    state start begin
        when 9006.chat." إلغاء المهارات المكتسبة " begin
			if pc.get_level() < 5 then
				say_title(" إمرأة عجوز : ")
				say("")
				say(" أعتذر ياولدي! أنت لم تبدأ بعد في تعلم أي تدريب، وطالما ")
				say(" أنك لا تمتلك أي نقاط مهارة، فإنك لن تستطيع إرجاعها إلى ")
				say(" الوضعية الاولى أو تصفيرها، من الأفضل لك أن تعد لي عندما ")
				say(" ترتكب خطأ ما في دورتك التدريبية، وعندها سوف أساعدك ")
				say("")
				say(" أتمنى لك حظاً طيباً يابني .. ")
				say("")
				return
			end
			if pc.get_level() > 30 then
				say_title(" إمرأة عجوز : ")
				say("")
				say(" المعذرة! لا أستطيع مساعدتك في إكمال هذا الإجراء، لإنك ")
				say(" قد وصلت بالفعل إلى المستوى "..pc.get_level().." وإذا أردت إجراء أي تغيير ")
				say(" في تدريبك، فإن هذا ممكن للمستوى 30 فقط وليس أكثر ")
				say("")
				say("")
				say_reward("  إذا كان لديك الإصرار على إلغاء تدريبك لإختيار تدريب جديد ")
				say_reward(" يمكنك الإستعانة بأداة ( شهادة تغيير التدريب ) لتطبيق ذلك ")
				say_item_vnum(71100)
				return
			end
			if pc.get_skill_group() == 0 then
				say_title(" إمرأة عجوز : ")
				say("")
				say(" المعذرة! أنت لا تقوم حالياً على أي تدريب، كما أنك ")
				say(" لا تمتلك أي نقاط مهارة يمكن إعادتها للوضع الأولي ")
				say("")
				return
			end
			local cost = 10000 + pc.level * 2000
			local s = 0
			if not pc.has_master_skill() then
				say_title(" إمرأة عجوز : ")
				say("")
				say(" مرحبا، مالذي حصل؟ تبدو لي شديد القلق! فأنا أراك خائب ")
				say(" الظن من تدريبك الحالي وتود التخلي عنه! لا عليك ياولدي ")
				say(" فإذا رغبت بنسيان تدريبك هذا لإختيار تدريب جديد، فسوف ")
				say(" أساعدك على إتمام ذلك، ولكنك ستحتاج إلى "..cost.." يانغ ")
				say("")
				say(" مارأيك ؟ هل ترغب حقاً في نسيان هذا التدريب ؟ ")
				say("")
				s = select(" نعم، نسيان التدريب الآن ", " لا أرغب بنسيانه بهذا الوقت ")
			else
				say_title(" إمرأة عجوز : ")
				say("")
				say(" فلينظر أحدكم إلى هذا الوجه الغريب! هل أنت على مايرام؟ ")
				say(" إذا كنت بالفعل غير مقتنع من تدريبك الحالي وتريد نسيانه ")
				say(" فيمكنني مساعدتك على نسيانه بسرعة وبلمحة بصر أيضا ")
				say("")
				wait()
				say_title(" إمرأة عجوز : ")
				say("")
				say(" هذا يعني أنه بإمكانك نسيان تدريبك هذا لإختيار تدريب آخر ")
				say(" ولكنك للأسف سوف تخسر جميع النقاط التي اكتسبتها من ")
				say(" قراءة الكتب، كما أنك بحاجة إلى "..cost.." يانغ لفعل هذا الأمر ")
				say("")
				say(" هل تود حقاً نسيان هذا التدريب لتبدأ من جديد ؟ ")
				say("")
				s = select(" نعم متأكد، نسيان التدريب الآن ", " لا أود نسيان التدريب بهذا الوقت ")
			end
			if 2==s then
				say_title(" إمرأة عجوز : ")
				say("")
				say(" إذا عد لاحقاً في حال غيرت رأيك ")
				say(" أتمنى لك التوفيق دائماً يابني .. ")
				say("")
				return
			end
			if pc.money < cost then
				say_title(" إمرأة عجوز : ")
				say("")
				say(" ليس لديك يانغ كافي! ولهذا لا يمكنني مساعدتك بدون ")
				say(" مقابل، فكما ترى أنا عجوز وأحتاج إلى شئ لأعيش منه ")
				say("")
				return
			end
			pc.changegold(-cost)
			pc.clear_skill()
			pc.set_skill_group(0)
			say_title(" إمرأة عجوز : ")
			say("")
			say(" حسنا هذا جيد ،، لقد تم نسيان تدريبك الحالي بأكمله ")
			say(" بإمكانك الآن التوجه لأساتذتك حتى تختار تدريب جديد ")
			say("")
			set_quest_state("skill_group","run")
		end
	end
end
