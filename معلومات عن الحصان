quest horse_menu begin
	state start begin
		when 20349.chat." معلومات عن الحصان " begin
			say_title(" معلومات عن الحصان : ") 
			say("")
			say_reward(" عن ماذا تود الإستفسار؟ ")
			say("")
			local s = select(" أنواع الحصان "," مهارات الحصان "," مميزات الحصان "," الأحصنة وأدواتها "," إلغاء (أغلق النافذة) ")
			if 1 == s then
				say_title(" أنواع الحصان : ") 
				say("")
				say(" هناك 3 أنواع مختلفة من الأحصنة لكل منها ترخيصه الخاص ")
				say(" بحيث أن كل نوع يختلف عن الثاني بعدة هيئات وإمكانيات ")
				say(" مثل: الإستدعاء- القتال عن ظهره- المهارات- نقاط الوضع ")
				say("")
				say(" وكل مرة يقوم الفارس بتحسين مستوى حصانه أو ترقيته ")
				say(" سترتفع أيضاً المزايا الخاصة بحصانه وتزيد من امكانياته ")
				say("")
				wait()
				say("                    النوع الأول: الحصان المبتدئ ")
				say("")
				say(" وتستطيع الحصول على هذا النوع عند بلوغك للمستوى 25 ")
				say(" من خلال التحدث مع صبي الإسطبل وإعطائه بعضا من اليانغ ")
				say(" مقابل أن يعطيك ترخيصاً مخصصاً لإمتطاء الحصان المبتدئ ")
				say("")
				say(" والحد الأقصى لتحسين مستوى الحصان المبتدئ هو -10- ")
				say(" وبعد تخطي هذا المستوى، يتأهل لترقيته إلى النوع الثاني ")
				say("")
				wait()
				say("                  النوع الثاني: الحصان المدرع ")
				say("")
				say(" ويعتبر هذا النوع من الأحصنة ذو مستوى متوسط ولديه ")
				say(" إمكانيات جيدة، حيث أنه يمكنك من قتال الوحوش عند ")
				say(" امتطائه، ويمتاز بهيئته المتقدمة عن الحصان المبتدئ ")
				say("")
				say(" وأقصى حد لتحسين مستوى الحصان المدرع هو -20- ")
				say(" وبعد تخطي هذا المستوى، يتأهل لترقيته للنوع الثالث ")
				say("")
				wait()
				say("                  النوع الثالث: الحصان العسكري ")
				say("")
				say(" ويعتبر هذا النوع هو الأخير والمتقدم، ويتميز بهيئته الأقوى ")
				say(" عن بقية الأحصنة، حيث يوفر لك جميع إمكانيات الفروسية ")
				say(" فهو يتيح لك ايضاً إستخدام مهارات الفروسية عند امتطائه ")
				say("")
				say(" وعندما يتم ترقية الحصان إلى عسكري، يصبح مستواه 21 ")
				say(" وهذا المستوى يعتبر الحد الأقصى لمستوى الحصان بأكمله ")
				say("")
			elseif 2 == s then
				say_title(" مهارات الحصان : ") 
				say("")
				say(" يتمتع الحصان ب6 مهارات مختلفة يمكن للفارس استخدامها ")
				say(" والإستفادة منها عند رفع مستواها، ولكنها تختلف عن غيرها ")
				say(" من مرحلة لأخرى، لإنها تقسم إلى فرعين (فروسية - ركوب) ")
				say(" ويرجع بعضها بفائدة للفارس، والبعض الآخر بفائدة للحصان ")
				say("")
				wait()
				say("             الفرع الأول: الفروسية - مهارات القتال ")
				say("")
				say(" الاولى: قتال من على ظهر الحصان ( من مستوى 50 ) ")
				say(" متاحة لجميع الشخصيات - شرط إمتلاك حصان عسكري ")
				say("")
				say(" الثانية: هرولت الأحصنة ( من مستوى 52 ) ")
				say(" متاحة لجميع الشخصيات - شرط إمتلاك حصان عسكري ")
				say("")
				say(" الثالثة: قوة الموجة ( من مستوى 55 ) ")
				say(" متاحة لجميع الشخصيات - شرط إمتلاك حصان عسكري ")
				say("")
				say(" الرابعة: سهام منهمرة ( من مستوى 55 ) ")
				say(" متاحة لشخصية النينجا فقط - شرط إمتلاك حصان عسكري ")
				say("")
				wait()
				say("            الفرع الثاني: الركوب - مهارات المساعدة ")
				say("")
				say(" الاولى: إستدعاء الحصان ")
				say(" -------------------------- ")
				say(" كلما ارتفعت نقاط هذه المهارة، سوف ترتفع أيضا نسبة ")
				say(" النجاح لإستدعاء الحصان، وأقصى حد لنقاطها هو >10 ")
				say(" فإذا وصلت للحد الأقصى يتم استدعاء الحصان بضغطة زر ")
				say("")
				say(" الثانية: ركوب الخيل ")
				say(" --------------------- ")
				say(" لا تعتبر هذه المهارة ذو أهمية كبيرة ولا ترجع بأي فائدة ")
				say(" فهي مخصصة لإظهار مستوى الحصان فقط وليس أكثر  ")
				say("")
			elseif 3 == s then
				say_title(" مميزات الحصان : ") 
				say("")
				say(" يكتسب الفارس عند امتطاء حصانه نقاط وضع إضافية ")
				say(" لتساعد على زيادة قوته في محاربة الوحوش أو غيره  ")
				say("")
				wait()
				say("              مميزات تكتسبها عند امتطاء حصانك ")
				say("              -------------------------------------- ")
				say("              < الحيوية - الذكاء - القوة - المناورة > ")
				say("")
				say(" كلما ارتفع مستوى الحصان، ارتفعت أيضا نقاط الوضع ")
				say(" ولمعرفة قيمة نقاط الوضع التي تكتسبها عند الإمتطاء ")
				say(" قم بإستدعاء الحصان، وبعد هذا إضغط عليه بزر الفأرة ")
				say(" وبعدها قم باختيار الزر المسمى ( معلومات حصانك ) ")
				say("")
			elseif 4 == s then
				say_title(" أدوات يحتاجها الحصان : ") 
				say("")
				say(" إن الأحصنة لديها أدوات خاصة بها ولا يمكن إهمالها ")
				say(" ومن خلال هذه الأدوات يمكن ايصال الحصان للأفضل ")
				say(" إن كان من ناحية التحسين أو الترقية أو المستوى ")
				say("")
				wait()
				say("                               الأداة الاولى: ")
				say("")
				say_item_vnum(50051)
				say("   من خلال هذه الأداة يمكنك استدعاء حصانك المبتدئ ")
				say("")
				say("")
				wait()
				say("                               الأداة الثانية: ")
				say("")
				say_item_vnum(50052)
				say("     من خلال هذه الأداة يمكنك استدعاء حصانك المدرع ")
				say("")
				say("")
				wait()
				say("                               الأداة الثالثة: ")
				say("")
				say_item_vnum(50053)
				say("   من خلال هذه الأداة يمكنك استدعاء حصانك العسكري ")
				say("")
				say("")
				wait()
				say("                               الأداة الرابعة: ")
				say("")
				say_item_vnum(50061)
				say("          من خلال قرائتك الناجحة لهذا الكتاب، سوف ")
				say("          تتمكن من رفع نقاط مهارة إستدعاء الحصان ")
				say("")
				say("")
				wait()
				say("                             الأداة الخامسة: ")
				say("")
				say_item_vnum(50060)
				say(" من خلال قرائتك الناجحة لهذا الكتاب، سوف تكتسب نقاطاً ")
				say(" ومن خلالها سوف تقم برفع إحدى مهارات الفروسية للحصان ")
				say("")
				say("")
				wait()
				say("                             الأداة السادسة: ")
				say("")
				say_item_vnum(50050)
				say("   بإستعمال هذه الأداة سوف تتمكن من تحسين مستوى ")
				say("   حصانك عند صبي الإسطبل بمجرد بلوغه المستوى 11 ")
				say("")
				say("")
			end	
		end
		function horse_menu()
			say_title(" الحصان : ")
			say("")
			local s = 4 
			s = select(" إمتطاء الحصان ", " إرسال الحصان ", " معلومات حصانك ", " إغلاق ")
			if s == 1 then
				horse.ride()
			elseif s == 2 then
				horse.unsummon()
			elseif s == 3 then
				if horse.get_level() > 0 and horse.get_level() <= 10 then
					say("     نوع الحصان: عادي        |        مستوى الحصان: "..( horse.get_level() ).." ")
					say("")
					say("القتال عن ظهره: لا يمكن    |    إستخدام مهاراته: لا يمكن ")
					say("")
					say("")
					say("          | الأداة المخصصة لإستدعاء الحصان العادي | ")
					say_item_vnum(50051)
					say("")
					say("        | المميزات التي يعطيها الحصان عند إمتطائه | ")
					say("")
					if horse.get_level()==1 then
						say("        الحيوية:18 - الذكاء:9 - القوة:26 - المناورة:35 ")
						say("")
					elseif horse.get_level()==2 then
						say("        الحيوية:18 - الذكاء:9 - القوة:27 - المناورة:36 ")
						say("")
					elseif horse.get_level()==3 then
						say("        الحيوية:19 - الذكاء:9 - القوة:28 - المناورة:38 ")
						say("")
					elseif horse.get_level()==4 then
						say("        الحيوية:19 - الذكاء:10 - القوة:29 - المناورة:39 ")
						say("")
					elseif horse.get_level()==5 then
						say("        الحيوية:20 - الذكاء:10 - القوة:30 - المناورة:40 ")
						say("")
					elseif horse.get_level()==6 then
						say("        الحيوية:21 - الذكاء:10 - القوة:31 - المناورة:41 ")
						say("")
					elseif horse.get_level()==7 then
						say("        الحيوية:21 - الذكاء:11 - القوة:32 - المناورة:42 ")
						say("")
					elseif horse.get_level()==8 then
						say("        الحيوية:22 - الذكاء:11 - القوة:33 - المناورة:44 ")
						say("")
					elseif horse.get_level()==9 then
						say("        الحيوية:22 - الذكاء:11 - القوة:34 - المناورة:45 ")
						say("")
					elseif horse.get_level()==10 then
						say("        الحيوية:23 - الذكاء:12 - القوة:35 - المناورة:46 ")
						say("")
					end
				elseif horse.get_level() > 10 and horse.get_level() <= 20 then
					say("     نوع الحصان: مدرع        |        مستوى الحصان: "..( horse.get_level() ).." ")
					say("")
					say(" القتال عن ظهره: يمكن      |     إستخدام مهاراته: لا يمكن ")
					say("")
					say("")
					say("         | الأداة المخصصة لإستدعاء الحصان المدرع | ")
					say_item_vnum(50052)
					say("")
					say("        | المميزات التي يعطيها الحصان عند إمتطائه | ")
					say("")
					if horse.get_level()==11 then
						say("        الحيوية:27 - الذكاء:13 - القوة:40 - المناورة:53 ")
						say("")
					elseif horse.get_level()==12 then
						say("        الحيوية:27 - الذكاء:14 - القوة:41 - المناورة:54 ")
						say("")
					elseif horse.get_level()==13 then
						say("        الحيوية:28 - الذكاء:14 - القوة:42 - المناورة:56 ")
						say("")
					elseif horse.get_level()==14 then
						say("        الحيوية:28 - الذكاء:14 - القوة:43 - المناورة:57 ")
						say("")
					elseif horse.get_level()==15 then
						say("        الحيوية:29 - الذكاء:15 - القوة:44 - المناورة:58 ")
						say("")
					elseif horse.get_level()==16 then
						say("        الحيوية:30 - الذكاء:15 - القوة:44 - المناورة:59 ")
						say("")
					elseif horse.get_level()==17 then
						say("        الحيوية:30 - الذكاء:15 - القوة:45 - المناورة:60 ")
						say("")
					elseif horse.get_level()==18 then
						say("        الحيوية:31 - الذكاء:15 - القوة:46 - المناورة:62 ")
						say("")
					elseif horse.get_level()==19 then
						say("        الحيوية:31 - الذكاء:16 - القوة:47 - المناورة:63 ")
						say("")
					elseif horse.get_level()==20 then
						say("        الحيوية:32 - الذكاء:16 - القوة:48 - المناورة:64 ")
						say("")
					end
				elseif horse.get_level()==21 then
					say(" نوع الحصان: عسكري        |        مستوى الحصان: "..( horse.get_level() ).." ")
					say("")
					say(" القتال عن ظهره: يمكن      |      إستخدام مهاراته: يمكن ")
					say("")
					say("")
					say("        | الأداة المخصصة لإستدعاء الحصان العسكري | ")
					say_item_vnum(50053)
					say("")
					say("        | المميزات التي يعطيها الحصان عند إمتطائه | ")
					say("")
					say("        الحيوية:36 - الذكاء:18 - القوة:53 - المناورة:71 ")
					say("")
				end	
			end	
		end		
		when 20030.click begin horse_menu.horse_menu() end
		when 20101.click begin horse_menu.horse_menu() end
		when 20102.click begin horse_menu.horse_menu() end
		when 20103.click begin horse_menu.horse_menu() end
		when 20104.click begin horse_menu.horse_menu() end
		when 20105.click begin horse_menu.horse_menu() end
		when 20106.click begin horse_menu.horse_menu() end
		when 20107.click begin horse_menu.horse_menu() end
		when 20108.click begin horse_menu.horse_menu() end
		when 20109.click begin horse_menu.horse_menu() end
	end
end	
