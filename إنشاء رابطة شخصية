quest guild_building begin
	state start begin
		when 11000.chat." أرغب بإنشاء رابطة شخصية " or 11002.chat." أرغب بإنشاء رابطة شخصية "
			or 11004.chat." أرغب بإنشاء رابطة شخصية " with not pc.isguildmaster() begin
		--
			say_title(" حارس ساحة القرية : ")
			say("")
			if npc.get_empire() != pc.get_empire() then
				say(" عذرا، لا يمكنني مساعدتك بخصوص الشئ الذي طلبته ")
				say(" لإنك من امبراطورية مختلفة ،، هيا أغرب عن وجهي الآن ")
				say("")
				say_reward(" إذا كنت ترغب في طلب شئ من حارس ساحة القرية ")
				say_reward(" عليك التوجه لحارس ساحة القرية الخاص بإمبراطوريتك ")
				say("")
				return
			end
			if pc.hasguild() then
				say(" لا يمكنك إنشاء رابطة جديدة وأنت مازلت في رابطة ")
				say("")
				return
			end
			say(" تريد إنشاء رابطة؟ هذا يحق لك إذا بلغت المستوى 40 ")
			say(" كما أن هذا الأمر سيكلفك 200.000 يانغ لإنشاء رابطة ")
			say("")
			say(" هل ترغب في إنشاء رابطة شخصية الآن؟ ")
			say("")
			local s = select(" نعم، إنشاء ", " لا، إغلاق ")
			if s == 2 then
				return
			end
			say_title(" حارس ساحة القرية : ")
			say("")
			if pc.get_level() < 40 then
				say(" مستواك مازال ضعيفاً لتقوم بقيادة رابطة خاصة بك ")
				say("")
				return
			end
			if get_time() < pc.getqf("remove_from_guild") then
				say(" في اليوم الأول من خروجك من رابطة لن تستطيع ")
				say(" إنشاء رابطة جديدة، ولهذا عليك الإنتظار يوم كامل ")
				say("")
				return
			end
			if get_time() < pc.getqf("destroy_guild") then
				say(" لقد قمت بإلغاء الرابطة مؤخراً ولذلك لن تستطيع ")
				say(" إنشاء رابطة جديدة في حين لم تمضي 24 ساعة ")
				say("")
				return
			end
			if pc.get_gold() < 200000 then
				say(" ليس لديك مايكفي من اليانغ لإنشاء رابطة ")
				say("")
				return
			end
			say(" حسنا، عليك الآن اختيار اسم للرابطة الشخصية ")
			say_reward(" يجب أن يكون اسم الرابطة باللغة الإنجليزية فقط ")
			say("")
			wait()
			game.request_make_guild()
		end
		when 11000.chat." لائحة الترتيب لأفضل 8 روابط " or
		11002.chat." لائحة الترتيب لأفضل 8 روابط " or
		11004.chat." لائحة الترتيب لأفضل 8 روابط " begin
		--
			say_title(" التصنيف الحالي لأفضل 8 روابط : ")
			say("")
			say("تظهر في هذه اللائحة الروابط الثمانية ونتائج معاركها ")
			say("")
			say_reward("الرتبة | الرابطة | النقاط | الفوز | التعادل | الخسارة ")
			say("------------------------------------------------------ ")
			say(" "..guild.high_ranking_string().." ")
			say("")
		end
		when 11000.chat." < تصنيف الرابطة الشخصية > " or 11002.chat." < تصنيف الرابطة الشخصية > "
			or 11004.chat." < تصنيف الرابطة الشخصية > " with pc.hasguild() begin
		--
			say_title(" تصنيف الرابطة الشخصية : ")
			say("")
			say("من هنا يمكنك تتبع المقارنة بين رابطتك وروابط أخر ")
			say("")
			say_reward("الرتبة | الرابطة | النقاط | الفوز | التعادل | الخسارة ")
			say("------------------------------------------------------ ")
			say(" "..guild.around_ranking_string().." ")
			say("")
		end
		when 11000.chat." < نتيجة الرابطة الشخصية > " or 11002.chat." < نتيجة الرابطة الشخصية > "
			or 11004.chat." < نتيجة الرابطة الشخصية > " with pc.hasguild() begin
		--
			say_title(" نتيجة الرابطة الشخصية : ")
			say("")
			say(" تصنيف رابطتك الحالية هو: "..guild.get_rank().." ")
			say("")
			say(" عدد نقاط رابطتك الحالية هي: "..guild.get_ladder_point().." ")
			say("")
		end
		when 11000.chat." << مغادرة الرابطة الحالية >> " or 11002.chat." << مغادرة الرابطة الحالية >> " or
		11004.chat." << مغادرة الرابطة الحالية >> " with pc.hasguild() and not pc.isguildmaster() begin
		--
			say_title(" حارس ساحة القرية : ")
			say("")
			if npc.get_empire() != pc.get_empire() then
				say(" عذرا، لا يمكنني مساعدتك بخصوص الشئ الذي طلبته ")
				say(" لإنك من امبراطورية مختلفة ،، هيا أغرب عن وجهي الآن ")
				say("")
				say_reward(" إذا كنت ترغب في طلب شئ من حارس ساحة القرية ")
				say_reward(" عليك التوجه لحارس ساحة القرية الخاص بإمبراطوريتك ")
				say("")
				return
			end
			say(" هل تود فعلاً ترك رابطتك الحالية؟ أعتقد أنك سوف تخسر ")
			say(" الأصدقاء بذلك، ولكن الأمر يعود إليك لإتخاذ القرار المناسب ")
			say("")
			say(" هل أنت متأكد من أنك تود الخروج من الرابطة؟ ")
			say("")
			local s = select(" نعم، خروج الآن ", " لا، أغلق النافذة ")
			if s == 1 then
				say_title(" حارس ساحة القرية : ")
				say("")
				say(" حسنا، لقد تم حذف اسمك من الرابطة ")
				say(" أتمنى لك حظاً موفقاً في رابطة أخرى ")
				say("")
				pc.remove_from_guild()
				pc.setqf("remove_from_guild", get_time()+1*60*60*24)
			end
		end
		when 11000.chat." X حذف الرابطة الشخصية X " or 11002.chat." X حذف الرابطة الشخصية X "
			or 11004.chat." X حذف الرابطة الشخصية X " with pc.isguildmaster() begin
		--
			say_title(" حارس ساحة القرية : ")
			say("")
			if npc.get_empire() != pc.get_empire() then
				say(" عذرا، لا يمكنني مساعدتك بخصوص الشئ الذي طلبته ")
				say(" لإنك من امبراطورية مختلفة ،، هيا أغرب عن وجهي الآن ")
				say("")
				say_reward(" إذا كنت ترغب في طلب شئ من حارس ساحة القرية ")
				say_reward(" عليك التوجه لحارس ساحة القرية الخاص بإمبراطوريتك ")
				say("")
				return
			end
			say(" لقد قمت بإنشاء الرابطة بجهد وتريد انت أن تقوم بحذفها! ")
			say(" حسناً ليست مشكلة، ولكن تأكد بأن الخبرة والنقاط التي ")
			say(" اكتسبتها رابطتك سوف تذهب سدى بدون رجعة، ولن يبقى ")
			say(" لك أي شئ إلا الذكريات الجميلة التي شاركتها مع أصدقائك ")
			say("")
			say(" ماهو قرارك، هل تود فعلاً حذف الرابطة الشخصية؟ ")
			say("")
			local s = select(" نعم، حذف الرابطة ", " لا، أغلق النافذة ")
			if s == 1 then
				say_title(" حارس ساحة القرية : ")
				say("")
				say(" حسنا، لقد تم حذف الرابطة الشخصية ")
				say(" ولم يتبقى منها سوى الذكريات الجميلة ")
				say("")
				pc.destroy_guild()
				pc.setqf("destroy_guild", get_time()+1*60*60*24)
			end
		end
	end
end
